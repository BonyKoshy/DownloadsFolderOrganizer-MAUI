<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DownloadsFolderOrganizer.MainPage"
             BackgroundColor="#202020"
             Padding="20">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- Title -->
            <Label Text="ORGANIZE IT!"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#ffffff" />

            <!-- File Selection Box -->
            <Frame CornerRadius="10"
                   BackgroundColor="#2e2e2e"
                   BorderColor="#5e5e5e"
                   Padding="30"
                   HasShadow="False">

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                    <Label Text="📁"
                           FontSize="40"
                           HorizontalOptions="Center"/>
                    <Label Text="Select Folder to Organize"
                           TextColor="#ffffff"
                           FontSize="16"
                           HorizontalOptions="Center"/>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Button Text="Browse Folder"
                                BackgroundColor="#357EC7"
                                TextColor="#ffffff"
                                CornerRadius="10"       
                                WidthRequest="140"
                                HeightRequest="40"
                                Clicked="OnBrowseClicked"/>

                        <Button Text="Downloads"
                                BackgroundColor="#2e2e2e"
                                BorderColor="#5e5e5e"
                                BorderWidth="1.5"
                                TextColor="#ffffff"
                                CornerRadius="10"       
                                WidthRequest="100"
                                HeightRequest="40"
                                Clicked="OnQuickDownloadsClicked"/>
                    </HorizontalStackLayout>

                    <!-- Selected folder display -->
                    <Label x:Name="selectedFolderLabel"
                           Text=""
                           TextColor="#aaaaaa"
                           FontSize="12"
                           HorizontalOptions="Center"
                           LineBreakMode="MiddleTruncation"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Organize + Undo Buttons -->
            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                <Button Text="Organize"
                        x:Name="organizeButton"
                        FontSize="16"
                        HeightRequest="50"
                        WidthRequest="280"
                        BackgroundColor="#357EC7"
                        TextColor="#E4F2FC"
                        CornerRadius="10"
                        Clicked="OnOrganizeClicked" />

                <Button Text="Undo"
                        x:Name="undoButton"
                        FontSize="14"
                        HeightRequest="50"
                        WidthRequest="80"
                        BackgroundColor="#2e2e2e" 
                        BorderColor="#5e5e5e"
                        BorderWidth="1.5"
                        TextColor="#ffffff"
                        CornerRadius="10"
                        Clicked="OnUndoClicked"/>
            </HorizontalStackLayout>

            <!-- Progress Bar -->
            <VerticalStackLayout>
                <Label Text="Progress:"
                       TextColor="#ffffff"
                       FontSize="14"/>
                <ProgressBar x:Name="progressBar"
                             Progress="0"
                             HeightRequest="15"
                             BackgroundColor="#5e5e5e"
                             ProgressColor="#357EC7"/>
            </VerticalStackLayout>

            <!-- Action Log Box -->
            <Frame CornerRadius="10"
                   BackgroundColor="#2e2e2e"
                   HasShadow="True"
                   HeightRequest="250">
                <VerticalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="Center" Margin="0,0,0,10">
                        <Label Text="Activity Log"
                               TextColor="#ffffff"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Button Text="Clear"
                                FontSize="12"
                                BackgroundColor="Transparent"
                                TextColor="#aaaaaa"
                                Padding="10,3"
                                Margin="190,0"
                                Clicked="OnClearLogClicked"/>
                    </HorizontalStackLayout>

                    <ScrollView x:Name="logScrollView">
                        <Label x:Name="logLabel"
                               Text=">> Ready to organize..."
                               FontSize="11"
                               FontFamily="Courier New"
                               TextColor="#ffffff"
                               Padding="5"/>
                    </ScrollView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>