<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DownloadsFolderOrganizer.MainPage"
             BackgroundColor="#202020"
             Padding="20">

    <ScrollView>
        
        
<VerticalStackLayout Spacing="20">

            <!-- colour mode switch -->
            <Image Source="hamburger.png" HeightRequest="24" WidthRequest="24" HorizontalOptions="End" />

            <!-- Title -->  
            <Label Text="ORGANIZE IT!"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#ffffff" />

            <!-- Drag and Drop Box -->
            <Frame CornerRadius="10"
       BackgroundColor="#2e2e2e"
       BorderColor="#5e5e5e"
       Padding="30"
       HasShadow="False">

                <Frame.GestureRecognizers>
                    <DropGestureRecognizer AllowDrop="True"
                               Drop="OnFileDropped"
                               DragOver="OnDragOver"/>
                </Frame.GestureRecognizers>

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <Image Source="drag_icon.png" HeightRequest="40" />
                    <Label Text="Drag &amp; Drop"
               TextColor="#ffffff"
               FontSize="16"
               HorizontalOptions="Center"/>
                    <Button Text="Browse"
                BackgroundColor="#2e2e2e"
                BorderColor="#5e5e5e"
                BorderWidth="1.5"
                TextColor="#ffffff"
                CornerRadius="10"       
                WidthRequest="120"
                HeightRequest="40"
                Clicked="OnBrowseClicked"/>
                </VerticalStackLayout>
            </Frame>


            <!-- Organize + Undo Buttons -->
            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                <Button Text="Organize"
                        x:Name="organizeButton"
                        FontSize="16"
                        HeightRequest="50"
                        WidthRequest="330"
                        BackgroundColor="#357EC7"
                        TextColor="#E4F2FC"
                        CornerRadius="10"
                        Clicked="OnOrganizeClicked" />
                <ImageButton Source="undo_icon.png"
                             HeightRequest="50"
                             WidthRequest="50"
                             BackgroundColor="#2e2e2e" 
                             BorderColor="#5e5e5e"
                             BorderWidth="1.5"
                             CornerRadius="10"
                             Padding="12"
                             Clicked="OnUndoClicked"/>
            </HorizontalStackLayout>

            <!-- Progress Bar -->
            <VerticalStackLayout>
                <Label Text="Progress:"
                       TextColor="#ffffff"
                       FontSize="14"/>
                <ProgressBar x:Name="progressBar"
                             Progress="0"
                             HeightRequest="15"
                             BackgroundColor="#5e5e5e"
                             ProgressColor="#357EC7"/>
            </VerticalStackLayout>

            <!-- Action Log Box -->
            <Frame CornerRadius="10"
       BackgroundColor="#2e2e2e"
       HasShadow="True"
       HeightRequest="200">
                <ScrollView x:Name="logScrollView">
                    <Label x:Name="logLabel"
               Text=">> Ready to organize..."
               FontSize="10"
               FontFamily="Courier New"
               TextColor="#ffffff"
               Padding="1"/>
                </ScrollView>
            </Frame>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
