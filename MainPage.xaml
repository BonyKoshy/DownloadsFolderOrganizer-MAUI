<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DownloadsFolderOrganizer.MainPage"
             BackgroundColor="#E4F2FC"
             Padding="20">

    <ScrollView>
        
        
<VerticalStackLayout Spacing="20">

            <!-- Hamburger menu -->
            <Image Source="hamburger.png" HeightRequest="24" WidthRequest="24" HorizontalOptions="Start" />

            <!-- Title -->  
            <Label Text="ORGANIZE IT!"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#00396c" />

            <!-- Drag and Drop Box -->
            <Frame CornerRadius="20"
                   BackgroundColor="#B6DCF6"
                   BorderColor="#001341"
                   Padding="30"
                   HasShadow="False">

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <Image Source="drag_icon.png" HeightRequest="40" />
                    <Label Text="Drag &amp; Drop"
                           TextColor="#001341"
                           FontSize="16"
                           HorizontalOptions="Center"/>
                    <Button Text="Browse"
                            BackgroundColor="#E4F2FC"
                            TextColor="#001341"
                            WidthRequest="100"
                            HeightRequest="40"
                            Clicked="OnBrowseClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Organize + Undo Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Organize"
                        x:Name="organizeButton"
                        HeightRequest="45"
                        WidthRequest="200"
                        BackgroundColor="#00396c"
                        TextColor="#E4F2FC"
                        CornerRadius="25"
                        Clicked="OnOrganizeClicked" />
                <ImageButton Source="undo_icon.png"
                             HeightRequest="40"
                             WidthRequest="40"
                             BackgroundColor="#B6DCF6" 
                             CornerRadius="20"
                             Padding="5"
                             Clicked="OnUndoClicked"/>
            </HorizontalStackLayout>

            <!-- Progress Bar -->
            <VerticalStackLayout>
                <Label Text="Progress:"
                       TextColor="#001341"
                       FontSize="14"/>
                <ProgressBar x:Name="progressBar"
                             Progress="0"
                             HeightRequest="8"
                             BackgroundColor="#E4F2FC"
                             ProgressColor="#001341"/>
            </VerticalStackLayout>

            <!-- Action Log Box -->
            <Frame CornerRadius="20"
                   BackgroundColor="#001341"
                   HasShadow="True"
                   HeightRequest="200">
                <ScrollView>
                    <Label x:Name="logLabel"
                           Text=">> Ready to organize..."
                           FontSize="14"
                           FontFamily="Courier New"
                           TextColor="#B6DCF6"
                           Padding="10"/>
                </ScrollView>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
